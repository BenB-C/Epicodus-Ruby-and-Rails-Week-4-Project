<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :cost %>
  <%= f.number_field :cost, step: 0.01, min: 0.01, max: 9999.99 %><br>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %><br>
  <%= f.submit %>
<% end %>
<%= button_to("Cancel", products_path, method: :get) %>
